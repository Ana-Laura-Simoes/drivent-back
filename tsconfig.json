{
  "compilerOptions": {
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src", "tests"],
  "exclude": [
    "node_modules",
    "tests"
  ],
  "plugins": [
    {
      "transform": "typescript-transform-paths"
    }
  ]
  
}
